{
  "info": {
    "name": "Bank Management System API",
    "description": "Complete API collection for Bank Management System with Email Verification and OTP Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser123\",\n    \"password\": \"password123\",\n    \"email\": \"user@example.com\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"phone\": \"1234567890\",\n    \"address\": \"123 Main Street\",\n    \"dateOfBirth\": \"1990-01-15\",\n    \"branchId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Email Verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"otpCode\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/verify-email",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "verify-email"]
            }
          }
        },
        {
          "name": "Resend Verification OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/resend-verification-otp?email=user@example.com",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "resend-verification-otp"],
              "query": [
                {
                  "key": "email",
                  "value": "user@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Admin Login (No OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin_username\",\n    \"password\": \"admin_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/admin-login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "admin-login"]
            }
          }
        },
        {
          "name": "User Login Step 1 (Send OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"user_username\",\n    \"password\": \"user_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login-step1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login-step1"]
            }
          }
        },
        {
          "name": "User Login Step 2 (Verify OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"otpCode\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login-step2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login-step2"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Operations",
      "item": [
        {
          "name": "Approve User (Sends Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/users/1/approve?adminId=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "users", "1", "approve"],
              "query": [
                {
                  "key": "adminId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Reject User (Sends Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/users/1/reject?adminId=1&reason=Incomplete documentation provided",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "users", "1", "reject"],
              "query": [
                {
                  "key": "adminId",
                  "value": "1"
                },
                {
                  "key": "reason",
                  "value": "Incomplete documentation provided"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "users"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "users", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "User Operations",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "profile"]
            }
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"Updated John\",\n    \"lastName\": \"Updated Doe\",\n    \"phone\": \"9876543210\",\n    \"address\": \"456 Updated Street\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "1"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    }
  ]
}
